---
import "@fontsource-variable/roboto-flex/wdth.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body
    class="flex min-h-screen flex-col border-t-8 border-lime-400 bg-black text-white"
  >
    <div class="flex-grow">
      <slot />
    </div>
    <footer
      class="mx-auto my-10 max-w-md px-8 text-center font-mono text-xs text-slate-700"
    >
      THE 2XKO NAME, CHARACTER NAMES, AND MOVE NAMES ARE ALL REGISTERED
      TRADEMARKS OR TRADEMARKS OF RIOT GAMES, INC. COMBOLAB IS NOT AFFILIATED
      WITH, ENDORSED, SPONSORED, OR SPECIFICALLY APPROVED RIOT GAMES, INC.
    </footer>
  </body>
</html>
